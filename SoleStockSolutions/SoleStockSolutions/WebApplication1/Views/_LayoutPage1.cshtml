    <script>
        $(function () {
            $("#accBtn").popover({
                trigger: "click",
                placement: "bottom",
                container: "body"
            }).on("shown.bs.popover", function () {
                $("#accBtn").css("color", "7091E6");

                $("#btnPopoverCerrarSesion").on("click", function(e) {
                    e.preventDefault();
                    mostrarConfirmar("¿Estás seguro de que quieres cerrar sesión?", "Cierre de sesión",);
                    $("#accBtn").popover("hide");
                });
            }).on("hidden.bs.popover", function () {
                $("#accBtn").css("color", "");
            });

            $(document).on("click", function (e) {
                if (!$(e.target).closest("#accBtn").length && !$(e.target).closest(".popover").length) {
                    $("#accBtn").popover("hide");
                }
            });

            $("#modalConfirmButton").on("click", function() {
                let url = "@Url.Action("Logout", "Home")";
                $.ajax({
                    url: url,
                    success: function (response) {
                        $("#confirmModal").modal("hide");
                        mostrarExitoLocked("Has cerrado sesión correctamente. Redirigiendo...");
                        setTimeout(function () {
                            window.location.href = "/Home/Index";
                        }, 2000);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        alert("Ha ocurrido un error. Por favor, inténtelo de nuevo.");
                    }
                });
            });
        });

        function mostrarError(mensaje, titulo) {
            if (titulo != null)
                $("#errorModal").find("h4").text(titulo);
            else
                $("#errorModal").find("h4").text("Error");
            $("#errorModal").find("p").text(mensaje);
            $("#errorModal").modal("show");

            setTimeout(function () {
                $("#errorModal").modal("hide");
                $("body").removeClass("modal-open");
                $(".modal-backdrop").remove();
            }, 2000);
        }

        function mostrarExito(mensaje, titulo) {
            if (titulo != null)
                $("#successModal").find("h4").text(titulo);
            else
                $("#successModal").find("h4").text("Éxito");
            $("#successModal").find("p").text(mensaje);
            $("#successModal").modal("show");

            setTimeout(function () {
                $("#successModal").modal("hide");
                $("body").removeClass("modal-open");
                $(".modal-backdrop").remove();
            }, 2000);
        }

        function mostrarExitoLocked(mensaje, titulo) {
            if (titulo != null)
                $("#successModalLocked").find("h4").text(titulo);
            else
                $("#successModalLocked").find("h4").text("Éxito");
            $("#successModalLocked").find("p").text(mensaje);
            $("#successModalLocked").modal("show");

            setTimeout(function () {
                $("#successModalLocked").modal("hide");
                $("body").removeClass("modal-open");
                $(".modal-backdrop").remove();
            }, 2000);
        }

        function mostrarConfirmar(mensaje, titulo) {
            if (titulo != null)
                $("#confirmModal").find("h4").text(titulo);
            else
                $("#confirmModal").find("h4").text("¿Estás seguro?");
            $("#confirmModal").find("p").text(mensaje);
            $("#confirmModal").modal("show");
        }

        function goToDashboard() {
            let url = '@Url.Action("Index", "Usuarios")';
            let perms = '@ViewBag.PermisoAdmin';
            if (perms == "True")
                url = '@Url.Action("Index", "Admin")';

            $.ajax({
                type: 'POST',
                url: url,
                dataType: 'json',
                data: { source: "btn" },
                success: function (response) {
                    if (response.success == false) {
                        mostrarError(response.message);
                    } else {
                        window.location.href = response.url;
                    }
                },
                error: function (xhr, status, error) {
                    console.error(error);
                    alert("Ha ocurrido un error. Por favor, inténtelo de nuevo.");
                }
            });
        }
    </script>
