    Layout = "~/Views/_LayoutPage1.cshtml";
}

@section Styles{
    <style>
        .blurred::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            backdrop-filter: blur(5px);
        }
    </style>
}

